<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/square_shape">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_to_page_three"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_back_toolbar" />

            <TextView
                android:id="@+id/tv_page_four_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:text="$5,00 For Rubel"
                android:textColor="@color/black"
                android:textSize="25sp" />

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#4C9A5F"
        android:text="Message"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="65dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_16dp"
        >


        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginRight="@dimen/margin_5dp"
            android:src="@drawable/ic_editor"/>


        <EditText
            android:id="@+id/tv_page_four_greetings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edidtext_shape"
            android:gravity="top|left"
            android:inputType="textMultiLine"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:lines="6"
            android:hint="Thank you"
            android:padding="@dimen/margin_10"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:scrollHorizontally="false" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/page_four_nextBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:layout_marginTop="@dimen/margin_16dp"
            android:textColor="#fff"
            android:background="@drawable/button_pressed"
            />

    </LinearLayout>

</LinearLayout>