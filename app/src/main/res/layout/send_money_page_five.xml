<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@drawable/square_shape"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/back_to_page_four"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_arrow_left" />

                <TextView
                    android:id="@+id/tv_page_five_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="$5,00 For Rubel"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/square_shape"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginLeft="@dimen/margin_5dp"
                android:padding="@dimen/margin_5dp"
                android:src="@drawable/user" />

            <TextView
                android:id="@+id/tv_page_five_holder_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/margin_5dp"
                android:text="Rubel Mia"
                android:textColor="@color/black"
                android:textSize="25sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/square_shape"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginLeft="@dimen/margin_5dp"
                android:padding="@dimen/margin_5dp"
                android:src="@drawable/ic_dollar" />

            <TextView
                android:id="@+id/tv_page_five_amount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/margin_5dp"
                android:text="500"
                android:textColor="@color/black"
                android:textSize="25sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/square_shape"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginLeft="@dimen/margin_5dp"
                android:padding="@dimen/margin_5dp"
                android:src="@drawable/ic_card" />

            <TextView
                android:id="@+id/tv_page_five_greetings"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/margin_5dp"
                android:text="Thank You"
                android:textColor="@color/black"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/square_shape"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginLeft="@dimen/margin_5dp"
                android:padding="@dimen/margin_5dp"
                android:src="@drawable/ic_lock" />

            <EditText
                android:id="@+id/tv_page_five_pin"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10"
                android:background="@drawable/edidtext_shape"
                android:ems="4"
                android:gravity="center"
                android:hint="Enter Pin"
                android:inputType="numberPassword"
                android:maxEms="4"
                android:maxLength="4"
                android:maxLines="1"
                android:padding="10dp"
                android:textColorHint="#000"
                android:textSize="20sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:gravity="bottom"
            android:orientation="vertical">

            <Button
                android:id="@+id/page_five_sendBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_16dp"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_pressed"
                android:text="Send"
                android:textColor="#fff" />

        </LinearLayout>


</LinearLayout>